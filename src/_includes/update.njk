---
layout: layout.njk
---
<article class="mx-auto max-w-3xl px-4 py-12">
  <header>
    <h1 class="text-3xl font-bold text-slate-900">{{ title }}</h1>
    <p class="mt-2 text-sm text-slate-600">{{ page.date }}</p>
    {% if excerpt %}
      <p class="mt-4 text-slate-700">{{ excerpt }}</p>
    {% endif %}
  </header>
  <div class="prose mt-8 max-w-none">
    {{ content | safe }}
  </div>
</article>
