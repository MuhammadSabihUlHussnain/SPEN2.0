---
layout: layout.njk
---
<article class="mx-auto max-w-4xl px-4 py-12">
  <header>
    <h1 class="text-3xl font-bold text-slate-900">{{ title }}</h1>
    {% if image %}
      <img class="mt-6 h-auto w-full rounded-lg border border-slate-200 object-cover" src="{{ image }}" alt="{{ title }}" />
    {% endif %}
  </header>
  <div class="prose mt-8 max-w-none">
    {{ content | safe }}
  </div>
</article>
