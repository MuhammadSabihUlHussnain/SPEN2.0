<section class="mx-auto max-w-6xl px-4 py-12">
  <h1 class="text-3xl font-bold text-slate-900">Research Areas</h1>

  {% if collections.research and collections.research.length %}
    <div class="mt-6 grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {% for item in collections.research %}
        <article class="overflow-hidden rounded-lg border border-slate-200">
          {% if item.data.image %}
            <img class="h-40 w-full object-cover" src="{{ item.data.image }}" alt="{{ item.data.title }}" />
          {% endif %}
          <div class="p-4">
            <h2 class="text-xl font-semibold text-slate-900">
              <a class="hover:underline" href="{{ item.url }}">{{ item.data.title }}</a>
            </h2>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p class="mt-6 text-slate-600">No research areas available.</p>
  {% endif %}
</section>
